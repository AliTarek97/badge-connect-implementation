{
  "name": "@badgewell/badgeconnect-oauth",
  "version": "0.1.0",
  "description": "This is a nodejs implementation of oauth 2.0 server for use for badgeconnect",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "generate-keys": "ts-node generate-keys ",
    "start": "node dist/server.js",
    "start-debug": "DEBUG=oidc-provider:* node dist/server.js ",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jose": "^1.10.1",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "mongodb": "^3.3.4",
    "mongoose": "^5.7.7",
    "oidc-provider": "^6.12.13",
    "typescript-collections": "^1.3.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
